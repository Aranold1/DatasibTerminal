@using DataSibTerminal.Models;
@model MainViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{


}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Page</title>
    <link rel="stylesheet" href="/lib/leftBar.css">
    <link rel="stylesheet" href="/lib/mainPage.css">
    <link rel="stylesheet" href="/lib/middleBar.css ">
    <link rel="stylesheet" href="/lib/rightBar.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="main">
        <div class="leftMenu">
            <button class="hamburgerMenu">
                <img src="styles/svg/menu.svg" class="menuSVG">
            </button>
            <button class="adminProfile">
                <img src="styles/example/adminPfp.jpg" class="adminPfp">
            </button>
            <a href="/adduser">
                <button class="adminProfile">
                    <img src="https://icons.veryicon.com/png/o/miscellaneous/unicons/user-plus-1.png" class="adminPfp">
                </button>
            </a>
        </div>
        <div class="searchNInbox">
            <div class="searchbar">
                <input class="searchbar-input" type="search" placeholder="Search">
            </div>
            <div class="backing">
                <ul class="inbox">
                    @foreach (var t in Model.Tickets)
                    {
                        <li>
                            <form asp-action="ChangeChat" method="post">
                                <input asp-for="id" type="hidden" name="index" value="@t.FkUserId" />
                                <button class="msg-button" type="submit">
                                    <div class="msg">
                                        <h2 class="msgSenderName">
                                            @t.AnydeskId
                                        </h2>
                                        <h3 class="msgSubject">
                                            @t.AnydeskId
                                        </h3>
                                        <p class="msgText">
                                            @t.Description
                                        </p>
                                        <p class="right">@t.CreationTime</p>
                                    </div>
                                </button>
                            </form>

                        </li>
                       
                    }
                    
                </ul>
            </div>
        </div>
        <div class="textBox">
            <div class="topBar">
                <div class="fillerName1">
                </div>
            </div>
            <div class="msgFullText" id="msgFullText">
                <ul>
                    @if (Model.Messages != null)
                    {
                        @foreach (var message in Model.Messages)
                        {
                            <li>
                                <h2>@message.Body</h2>
                            </li>
                        }
                    }
                </ul>
            </div>



            <form asp-action="SendMessage" method="post">
                <div class="inputMsg">
                    <input type="hidden" name="index"  />
                    <input  class="inputMsg-input">
                    <button class="sendMsg-button" type="submit">Send</button>
                </div>
            </form>
           
        </div>
    </div>
</body>
</html>
